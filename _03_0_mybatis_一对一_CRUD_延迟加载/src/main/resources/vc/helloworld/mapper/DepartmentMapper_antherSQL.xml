<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vc.helloworld.mybatis.mapper.DepartmentMapper">
	
	
	<resultMap id="BaseResultMap" type="vc.helloworld.mybatis.domain.Department">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		
		<!-- 针对单一对象的属性,我们使用association元素 -->
		<!-- 针对集合类型的属性,我们使用collection元素 -->
		<collection property="emps"
			ofType="vc.helloworld.mybatis.domain.Employee"
			select="vc.helloworld.mybatis.mapper.EmployeeMapper.selectByDeptId"
			column="id"
		/>
	</resultMap>
	
	
	<select id="get" resultMap="BaseResultMap" >
		SELECT id,name FROM department WHERE id = #{id}
	</select>
</mapper>
